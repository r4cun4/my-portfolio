---
const { href } = Astro.props
---

<a
  href={href}
  role="link"
  class="
  inline-flex
  items-center
  justify-center
  gap-2 px-4 py-1
  text-gray-800
  transition
  border
  border-[#42b883]
  rounded-full
  focus-visible:ring-yellow-500/80
  text-md
  group
  max-w-fit
  focus:outline-none
  focus-visible:outline-none
  focus-visible:ring
  focus-visible:ring-white
  focus-visible:ring-offset-2
  active:bg-black
  hover:text-white
  hover:bg-gradient-to-r from-[#42b883] to-[#0ebbd2]
  dark:bg-[#292D32]
  dark:text-white"
>
  <slot />
</a>
